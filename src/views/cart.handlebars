<h1>Products in the Cart:</h1>

{{#each products}}
<div>
  <h2>{{this.product.title}}:</h2>
  <h4>Quantity: {{this.quantity}}</h4>
  <p>Price: ${{this.product.price}}</p>
  <p>Category: {{this.product.category}}</p>
</div>
{{/each}}

<button id="btnPurchase" type="button">Purchase</button>

<script src="js/cart.js"></script>