<button type="button"><a href="/">Home</a></button>
<div>
    
    <div>
    <button id="logout" type="button"> Logout</button>
    <button id="seeCart" type="button">See cart</button>
  </div>
    {{#each docs}}
        <div>
            <h2>{{this.title}}:</h2>
            <p>Price: ${{this.price}}</p>
            <p>Category: {{this.category}}</p>
            <button id={{this._id}} class="addToCart">Add to Cart</button>
        </div>
    {{/each}}
    
    <div>
        {{#if hasPrevPage}}
            <button><a href="products?page={{prevPage}}">Previous page</a></button>
        {{/if}}
        {{#if hasNextPage}}
            <button ><a href="products?page={{nextPage}}">Next page</a></button>
        {{/if}}
    </div>
</div>

<script src="/js/products.js"></script>