<div class="flex-c-sb-c">
    <div id="bar" class="flex-r-c-c">
        <button type="button" class="btn-contained-light"><a href="/">Home</a></button>
        <button id="logout" class="btn-contained-light" type="button"> Logout</button>
        <button id="seeCart" class="btn-contained-light" type="button">See cart</button>
    </div>
    {{#each docs}}
    <div class="product bg-light flex-c-sb-c">
        <h2>{{this.title}}:</h2>
        <p>Price: ${{this.price}}</p>
        <p>Category: {{this.category}}</p>
        <button id={{this._id}} class="addToCart btn-contained-dark">Add to Cart</button>
    </div>
    {{/each}}

    <div class="flex-r-c-c">
        {{#if hasPrevPage}}
        <button class="btn-contained-light"><a href="products?page={{prevPage}}">Previous page</a></button>
        {{/if}}
        {{#if hasNextPage}}
        <button class="btn-contained-light"><a href="products?page={{nextPage}}">Next page</a></button>
        {{/if}}
    </div>
</div>
<link rel="stylesheet" href="/styles/products.css">
<script src="/js/products.js"></script>